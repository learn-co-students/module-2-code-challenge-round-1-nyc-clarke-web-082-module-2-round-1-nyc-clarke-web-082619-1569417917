<h1>New Heroine Form</h1>

<%= form_for @heroine do |f| %>

    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p><%= error %></p>
        <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br>

    <%= f.label :power %>
    <%= f.collection_select :power_id, Power.all, :id, :name, {prompt: "Please select a power" } %>

    <%= f.submit %>

<% end %>